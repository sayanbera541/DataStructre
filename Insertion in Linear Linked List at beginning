#include <stdio.h>
#include <stdlib.h>

void insert_atBegining(int item);
void display_node();

struct node
{
	int data;
	struct node *next;
};
 
struct node *start;

int main()
{
	int choice,num;
	do
	{
		printf("Enter the number you want to insert into the node : \n");
		scanf("%d",&num);
		insert_atBegining(num);
		printf("Press 0 to insert more  \n");
		scanf("%d",&choice);
	}while(choice==0);
	display_node();
	return 0;
}

void insert_atBegining(int item)
{
	struct node *ptr = (struct node *)malloc(sizeof(struct node));
	if(ptr == NULL)
	{
		printf("\n Overflow");
	}
	else
	{
		ptr->data = item;
		ptr->next = start;
		start = ptr; 
		printf("\nNew node inserted \n");
	}	
}

void display_node()
{
	if(start == NULL)  
    {  
        printf("\nList is empty");  
    }  
    else   
    { 
		struct node *ptr = start;
	    while (ptr != NULL) 
		{
	        printf("%d \t ", ptr->data);
	        ptr = ptr->next;
	    }    
    }
    printf("\n");
}
